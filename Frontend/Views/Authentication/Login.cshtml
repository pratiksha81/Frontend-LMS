@model Frontend.Models.Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HSMSS Library Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100vh;
            font-family: "Outfit", sans-serif;
        }

        .login {
            background: #ffffff;
            color: #000;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
        }

        .register {
            background: #255d81;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            width: 100%;
            max-width: 450px;
        }

            .form-group input {
                width: 100%;
                padding: 10px 20px;
                border: 1px solid #000;
                border-radius: 30px;
                font-size: 20px;
                color: #6a6a6a;
                text-align: center;
            }

        .login-btn {
            padding: 12px 80px;
            border: none;
            border-radius: 30px;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
            background: #255d81;
            color: #fff;
        }

        .register-btn {
            background: #d9d9d9;
            color: #000;
            padding: 12px 96px;
            border-radius: 30px;
        }

        .image-preview {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px;
        }

        .login-title {
            font-size: 30px;
            margin-bottom: 10px;
        }

        .login-description {
            font-size: 20px;
        }

        .forgot-password {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- Log In Section (Left) -->
            <div class="col-md-6 login">
                <form asp-action="Login" method="post" class="text-center">
                    <img src="~/images/PageIcon/LLogo.png" alt="Library Logo" class="image-preview">
                    <div class="login-title">HSMSS Library Management System</div>
                    <p class="login-description">Please enter your credentials</p>
                    <div class="form-group">
                        <input asp-for="Username" class="form-control" placeholder="Username" required>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="forgot-password">Forgot Password?</div>
                    <button type="submit" class="login-btn">Log In</button>
                    @if (ViewBag.ErrorMessage != null)

                    {
                        <p class="text-danger">@ViewBag.ErrorMessage</p>
                    }
                </form>
            </div>

               <!-- Register Section (Right) -->
            <div class=" col-md-6 d-flex flex-column justify-content-center align-items-center register">
            <div class="" style="width:366px"><img src="~/images/PageIcon/LLlogo.png" alt="Library Logo" class="image-preview">
            <div class="" style="width:366px">
            <img src="~/images/PageIcon/HL.png" alt="Library Logo" class="image-preview">
            <p style="font-weight:500; font-size:32px;">New to our platform?</p>
            <p style="font-weight:500; font-size:32px;"><strong>Register Now</strong></p>
            <a style="padding:12px 96px;border-radius: 30px;" class="btn register-btn" data-bs-toggle="modal"
                                   data-bs-target="#signUpModal">Register</a>
            </div>
            </div>
            </div>
                    @Html.Partial("_SignUpModal", new Frontend.Models.SignUp())
                    </div>
    </div>
</body>
</html>
