@model List<Author>

@{
    ViewData["Title"] = "Author Info";
}
<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    .header {
        height: 65px;
        margin-left: 222px;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        padding: 0 20px;
    }

        .header h2 {
            font-size: 18px;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .header img {
            width: 35px;
            height: 35px;
            margin-right: 10px;
        }

    .body {
        background: #F2F2F2;
        padding: 20px;
        margin-left: 222px;
        height: 100vh;
        overflow-y: auto;
    }

    .card {
        background: #E3E3E3;
        padding: 22px 34px;
        border: none;
        border-radius: 8px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .form-control {
        height: 65px;
        background-color: #D9D9D9;
        border: none;
        border-radius: 4px;
    }

    .form-label {
        font-size: 14px;
        font-weight: bold;
        color: #333;
    }

    .btn {
        padding: 8px 20px;
        font-size: 14px;
        font-weight: 600;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #317FB1;
        }

    .btn-primary {
        background-color: #255D81;
        width: 260px;
        color: white;
        padding: 21px 56px;
        border-radius: 20px;
    }

    .btn-Action {
        width: 128px;
        height: 52px;
        color: white;
        padding: 14px 20px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

        .btn-Action.edit {
            background: #B7A522;
            margin-right: 8px;
        }

        .btn-Action.delete {
            background: #D13A3D;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: #F2F2F2;
        overflow: hidden;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background: #5E5E5E;
            color: white;
        }

            .table thead th {
                padding: 14px;
                text-align: center;
                font-weight: 600;
            }

        .table tbody tr {
            border-bottom: 1px solid #E0E0E0;
        }

            .table tbody tr:last-child {
                border-bottom: none;
            }

        .table tbody td {
            padding: 14px;
            color: #333;
            font-size: 14px;
            text-align: center;
            vertical-align: middle;
        }

            .table tbody td:first-child {
                width: 100px;
            }

            .table tbody td:last-child {
                width: 300px;
                text-align: center;
            }

    .details-header {
        font-weight: 600;
        padding-bottom: 14px;
        font-size: 28px;
        color: #333;
    }
</style>

<div class="header">
    <img src="~/images/PageIcon/AutherPageIcon.png" alt="Author Icon">
    <h2>Author Info</h2>
</div>

<div class="body">
    <div class="card">
        @{
            var isEdit = ViewBag.IsEdit ?? false;

            var author = ViewBag.Author ?? new Author();
        }

        <form asp-action="@((bool)isEdit ? "EditAuthor" : "AddAuthor")" method="post">
            <div>
                <input hidden type="text" class="form-control" name="AuthorID" value="@author.AuthorID" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Author Name</label>
                <input type="text" class="form-control" name="Name" value="@author.Name" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Bio</label>
                <input type="text" class="form-control" name="Bio" value="@author.Bio" required>
            </div>
            <button type="submit" class="btn btn-primary">@((bool)isEdit ? "Update Author" : "Add Author")</button>
        </form>
    </div>

    <div class="card">
        <h3 class="details-header">Author Details</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Author ID</th>
                    <th>Name</th>
                    <th>Bio</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aauthor in Model)

                {
                    <tr>
                        <td>@aauthor.AuthorID</td>
                        <td>@aauthor.Name</td>s
                        <td>@aauthor.Bio</td>
                        <td>
                            <form asp-action="Indexx" method="post" style="display: inline;">
                                <input type="hidden" name="AuthorID" value="@aauthor.AuthorID">
                                <input type="hidden" name="Name" value="@aauthor.Name">
                                <input type="hidden" name="Bio" value="@aauthor.Bio">
                                <button type="submit" class="btn btn-Action edit">Edit</button>
                            </form>
                            <form asp-action="DeleteAuthor" method="post" style="display: inline;">
                                <input type="hidden" name="AuthorID" value="@aauthor.AuthorID">
                                <button type="submit" class="btn btn-Action delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>