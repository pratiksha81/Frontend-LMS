@model List<Book>

@{
    ViewData["Title"] = "Book Info";
}

<style>
    .header {
        height: 65px;
        margin-left: 222px;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        padding: 0 20px;
    }

        .header h2 {
            font-size: 18px;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .header img {
            width: 35px;
            height: 35px;
            margin-right: 10px;
        }

    .body {
        background: #F2F2F2;
        padding: 20px;
        margin-left: 222px;
        height: 100vh;
        overflow-y: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: #F2F2F2;
        overflow: hidden;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background: #5E5E5E;
            color: white;
        }

            .table thead th {
                padding: 14px;
                text-align: center;
                font-weight: 600;
            }

        .table tbody tr {
            border-bottom: 1px solid #E0E0E0;
        }

            .table tbody tr:last-child {
                border-bottom: none;
            }

        .table tbody td {
            padding: 14px;
            color: #333;
            font-size: 14px;
            text-align: center;
            vertical-align: middle;
        }

    .btn {
        padding: 8px 20px;
        font-size: 14px;
        font-weight: 600;
        border: none;
        border-radius: 4px;
    }

    .btn-Action {
        width: 128px;
        height: 52px;
        background-color: #C7B303;
        color: white;
        padding: 14px 20px;
        border: none;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
    }

    .table tbody td:last-child {
        width: 300px;
        margin: 0;
        text-align: center;
    }

    .table tbody td:first-child {
        width: 100px;
        margin: 0;
        text-align: center;
    }

    .btn:hover {
        opacity: 0.9;
    }

    .card {
        background: #E3E3E3;
        padding: 22px 34px;
        border: none;
        border-radius: 8px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-size: 14px;
        font-weight: bold;
        color: #333;
    }

    .form-control {
        height: 65px;
        background-color: #D9D9D9;
        border: none;
        border-radius: 4px;
    }

    .submit-btn {
        background-color: #255D81;
        width: 260px;
        color: white;
        padding: 21px 56px;
        border: none;
        border-radius: 20px;
    }
</style>

<div class="header">
    <img src="~/images/NavbarLogo/BookH.png" alt="Author Icon">
    <h2>Book Info</h2>
</div>

<div class="body">
    <div class="card mb-4">
        @{
            var isEdit = ViewBag.IsEdit ?? false;

            var book = ViewBag.Book ?? new Book();
        }

        <form asp-action="@((bool)isEdit ? "EditBook" : "AddBook")" method="post">
            <div class="row mb-3">
                <div class="col-md-6">

                    <input type="text" class="form-control" id="BookId" name="BookId" value="@book.BookId" hidden required>
                </div>
               

                
                <div class="col-md-12">
                    <label for="ISBN" class="form-label">ISBN</label>
                    <input type="text" class="form-control" id="ISBN" name="ISBN" value="@book.ISBN" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-7">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="Title" name="Title" value="@book.Title" required>
                </div>
                <div class="col-md-5">
                    <label for="Genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="Genre" name="Genre" value="@book.Genre" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="AuthorId" class="form-label">Author ID</label>
                    <input type="number" class="form-control" id="AuthorId" name="AuthorId" value="@book.AuthorId" required>
                </div>
                <div class="col-md-6">
                    <label for="Quantity" class="form-label">Quantity</label>
                    <input type="number" class="form-control" id="Quantity" name="Quantity" value="@book.Quantity" required>
                </div>
            </div>
            <button type="submit" class="submit-btn">
                @((bool)isEdit ? "Update Book" : "Add Book")
            </button>
        </form>
    </div>


    <div class="card">
        <h3>Book Details</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>AuthorId</th>
                    <th>Genre</th>
                    <th>ISBN</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var abook in Model)

                {
                    <tr>
                        <td>@abook.BookId</td>
                        <td>@abook.Title</td>
                        <td>@abook.AuthorId</td>
                        <td>@abook.Genre</td>
                        <td>@abook.ISBN</td>
                        <td>@abook.Quantity</td>
                        <td>
                            <form asp-action="Indexx" method="post" style="display: inline;">
                                <input type="hidden" name="BookId" value="@abook.BookId">
                                <input type="hidden" name="Title" value="@abook.Title">
                                <input type="hidden" name="AuthorId" value="@abook.AuthorId">
                                <input type="hidden" name="Genre" value="@abook.Genre">
                                <input type="hidden" name="ISBN" value="@abook.ISBN">
                                <input type="hidden" name="Quantity" value="@abook.Quantity">
                                <button type="submit" class="btn btn-Action" style="background:#B7A522; margin-right:8px">Edit</button>
                            </form>
                            <form asp-action="DeleteBook" method="post" style="display: inline;">
                                <input type="hidden" name="BookId" value="@abook.BookId">
                                <button type="submit" class="btn btn-Action" style="background:#D13A3D;">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
