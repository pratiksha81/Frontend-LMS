@model IEnumerable<Frontend.Models.OverdueBorrower>
<style>
    .overdue-borrowers {
        padding: 20px;
    }

    .borrower-card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }

    .borrower-card {
        width: 484px;
        height: 50px;
        border: 1px solid #ccc;
        border-radius: 12px;
        display: flex;
        align-items: center;
        padding: 16px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .icon {
        width: 30px;
        height: 30px;
        border-right:2px solid black;
         padding:0 10px 0 0;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 24px;
        color: #555;
        margin-right: 16px;
    }

    .details {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .details .count {
            font-size: 15px;
            font-weight:bold;
            
        }

        .details .label {
            font-size: 16px;
            color: #777;
        }
</style>
<div class="overdue-borrowers" style="padding:20px; background:white;width:484px;border-radius:10px">
    <h2>Overdue Borrowers</h2>
    <div class="borrower-card-container">
        @foreach (var borrower in Model)
        {
            <div class="borrower-card">
                <div class="icon">
                    <img src="~/images/PageIcon/Ou.png"  alt="Alternate Text" />
                </div>
                <div class="details"  >
                    <span class="count">@borrower.BorrowedId</span>
                    <span class="label">@borrower.Name</span>
                </div>
            </div>
        }
    </div>
</div>
